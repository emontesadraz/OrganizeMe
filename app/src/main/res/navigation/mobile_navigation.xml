<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home"
    android:background="@color/white"
    android:textColor="@color/green">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.organizemeofficial.ui.home.HomeFragment"
        android:label="Inicio"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.organizemeofficial.ui.dashboard.DashboardFragment"
        android:label="Nueva Tarea"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.organizemeofficial.ui.profile.ProfileFragment"
        android:label="Usuario"
        tools:layout="@layout/fragment_notifications" />
</navigation>